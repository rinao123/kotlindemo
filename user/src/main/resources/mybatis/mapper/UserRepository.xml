<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rinao.demo.kotlindemo.user.repository.UserRepository">
    <select id="queryAll" resultType="com.rinao.demo.kotlindemo.user.entity.User">
        SELECT * FROM user
    </select>
    <select id="queryById" resultType="com.rinao.demo.kotlindemo.user.entity.User">
        SELECT * FROM user WHERE id =#{id}
    </select>
</mapper>